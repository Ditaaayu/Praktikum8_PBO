    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double angka = Double.parseDouble(jTextField1.getText()); // getText = untuk mengambil nilai dari textField
        String huruf = " ";
        if (angka >= 90 && angka <= 100) {
            huruf = "A";
        } else if (angka >= 85 && angka < 90) {
            huruf = "A-";
        } else if (angka >= 80 && angka < 85) {
            huruf = "B+";
        } else if (angka >= 70 && angka < 80) {
            huruf = "B";
        } else if (angka >= 60 && angka < 70) {
            huruf = "B-";
        } else if (angka >= 50 && angka < 60) {
            huruf = "C";
        } else if (angka >= 40 && angka < 50) {
            huruf = "D";
        }else if(angka <40){
            huruf = "E";
        }else {
            huruf ="Nilai Tidak Didefenisikan";
        }
        jTextField2.setText(huruf); // setText = menampilkan text
        
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String huruf = jTextField2.getText();
        String angka = " ";
        if(huruf.equals("A")){
            angka = "90-100";
        }else if(huruf.equals("A-")){
            angka ="85-89";
        }else if(huruf.equals("B+")){
            angka ="80-84";
        }else if(huruf.equals("B")){
            angka ="70-79";
        }else if(huruf.equals("B-")){
            angka ="60-69";
        }else if(huruf.equals("C")){
            angka ="50-59";
        }else if(huruf.equals("D")){
            angka ="40-49";
        }else if(huruf.equals("E")){
            angka ="0-39";
        }else{
            angka ="nilai tidak didefinisikan";
        }
        jTextField1.setText(angka);
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        jTextField1.setText(" ");
        jTextField2.setText(" ");
        jTextField1.requestFocus();
        jTextField2.requestFocus();
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        System.exit(0);
    }                                        

